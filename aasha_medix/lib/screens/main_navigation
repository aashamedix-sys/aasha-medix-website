          thumbColor: WidgetStateProperty.resolveWith((states) {
            if (states.contains(WidgetState.selected)) {
              return const Color(0xFF2E7D32);
            }
            if (states.contains(WidgetState.disabled)) {
              return const Color(0xFFBDBDBD);
            }
            return const Color(0xFFBDBDBD);
          }),
